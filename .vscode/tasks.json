{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "start",
      "path": "frontend/",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      },
      "label": "npm: start (frontend)"
    },
    {
      "type": "npm",
      "script": "test",
      "path": "frontend/",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      },
      "label": "npm: test (frontend)"
    },
    {
      "type": "shell",
      "command": "php -S localhost:8000 -t web",
      "isBackground": true,
      "problemMatcher": [],
      "label": "PHP: Start Dev Server",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      }
    },
    {
      "type": "shell",
      "command": "${workspaceFolder}/vendor/bin/pest",
      "problemMatcher": [],
      "label": "Pest: Run All Tests",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "command": "${workspaceFolder}/vendor/bin/pest --filter",
      "problemMatcher": [],
      "label": "Pest: Run Filtered Tests"
    }
  ]
}
