{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "ng serve",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start (frontend)",
      "url": "http://localhost:4200/"
    },
    {
      "name": "ng test",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: test (frontend)",
      "url": "http://localhost:9876/debug.html"
    },
    {
      "name": "Pest: All Tests",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/pest",
      "cwd": "${workspaceFolder}",
      "args": []
    },
    {
      "name": "Pest: Current File",
      "type": "php",
      "request": "launch",
      "program": "${workspaceFolder}/vendor/bin/pest",
      "cwd": "${workspaceFolder}",
      "args": ["${file}"]
    }
  ]
}
